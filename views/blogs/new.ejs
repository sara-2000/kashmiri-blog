<%- include("../partials/header.ejs") %>
<div class="container">
	<div class="row">
		<h1 class="text-center">To add a new Blog</h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/blogs" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Title" name="title">
				</div>
				<div class="form-group">
				    <input class="form-control" type="file" placeholder="Upload Image" name="image" accept="image/*" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="content" name="content">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="tags" name="tags">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/blogs">Go Back</a>
		</div>	
	</div>	
</div>
<%- include("../partials/footer.ejs") %>