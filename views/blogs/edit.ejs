<%- include("../partials/header.ejs") %>
<div class="container">
	<div class="row">
		<h1 class="text-center">Edit <%= blog.title %></h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= blog.title %>" name="blog[title]">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= blog.image%>"  name="blog[image]" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= blog.content %>" name="blog[content]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= blog.tags %>" name="blog[tags]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/blogs">Go Back</a>
		</div>	
	</div>	
</div>
<%- include("../partials/footer.ejs") %>